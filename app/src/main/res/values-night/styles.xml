<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            @android:color/transparent
        </item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="CircleImageStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

    <style name="Widget.MyApp.MaterialTextView" parent="Base.Theme.MyApp">
        <item name="textAllCaps">true</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MyApp.MaterialTextView.NavDrawer">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Widget.MyApp.MaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="drawableEndCompat">@drawable/ic_arrow_forward</item>
        <item name="elevation">10dp</item>
    </style>

    <style name="Widget.MyApp.AuthButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>

    <style name="Widget.MyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="boxStrokeColor">@color/outline_stroke_color</item>
        <item name="hintTextColor">@color/outline_stroke_color</item>
        <item name="android:textColorHint">@color/indicator_text_color</item>
    </style>

    <style name="Widget.MyApp.DashboardTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MyApp.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="android:background">@drawable/bg</item>
        <item name="itemIconTint">?attr/colorOnPrimary</item>
        <item name="itemShapeAppearance">?attr/shapeAppearanceSmallComponent</item>
        <item name="itemTextAppearance">?attr/textAppearanceButton</item>
        <item name="itemTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MyApp.MaterialTextView.Drawable" parent="Widget.MaterialComponents.TextView">
        <item name="drawableTint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MyApp.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

</resources>
